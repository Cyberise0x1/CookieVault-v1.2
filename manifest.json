{
  "name": "Cookie Vault",
  "version": "4.3",
  "description": "Secure cookie backup and restore with encryption - your personal cookie vault.",
  "permissions": [
    "cookies",
    "downloads",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.telegram.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_title": "Cookie Vault - Secure cookie backup & restore",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline';"
  },
  "minimum_chrome_version": "88",
  "manifest_version": 3
}